<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ufx_order_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/disable_color"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ordersAreaLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"

        android:padding="10dp">


        <com.view.MTextView
            android:id="@+id/serviceItemname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="start|center"
            android:paddingStart="5dp"
            android:text="item"
            android:textAlignment="viewStart"
            android:textColor="#030303"
            android:textSize="@dimen/txt_size_16"
            app:customTypeFace="@string/robotobold" />

        <com.view.MTextView
            android:id="@+id/servicepriceTxtView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center"
            android:paddingEnd="5dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="#4d4949"
            android:textSize="@dimen/txt_size_16"
            app:customTypeFace="@string/robotolightFont" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/providerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordersAreaLayout"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"

        android:padding="10dp">


        <com.view.MTextView
            android:id="@+id/providerHname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="start|center"
            android:paddingStart="5dp"
            android:text="item"
            android:textAlignment="viewStart"
            android:textColor="#030303"
            android:textSize="@dimen/txt_size_16"
            app:customTypeFace="@string/robotobold" />

        <com.view.MTextView
            android:id="@+id/providerVname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center"
            android:paddingEnd="5dp"
            android:textAlignment="viewEnd"

            android:textColor="#4d4949"
            android:textSize="@dimen/txt_size_16"
            app:customTypeFace="@string/robotolightFont"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bookingdateLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/providerLayout"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"

        android:padding="10dp">


        <com.view.MTextView
            android:id="@+id/bookingdateHname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="start|center"
            android:paddingStart="5dp"
            android:text="item"
            android:textAlignment="viewStart"
            android:textColor="#030303"
            android:textSize="@dimen/txt_size_16"
            app:customTypeFace="@string/robotobold" />

        <com.view.MTextView
            android:id="@+id/bookingdateVname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center"
            android:paddingEnd="5dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="#4d4949"
            android:textSize="@dimen/txt_size_16"
            app:customTypeFace="@string/robotolightFont"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/commentarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/promoArea"

        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <com.view.MTextView
            android:id="@+id/commentHname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center"
            android:paddingStart="5dp"
            android:text="item"
            android:textAlignment="viewStart"
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/txt_size_16"
            app:customTypeFace="@string/robotobold" />

        <include
            android:id="@+id/commentBox"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/promoArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookingtimeLayout"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/promocodeArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.view.MTextView
                    android:id="@+id/promocodeappliedHTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_size_14"
                    app:customTypeFace="@string/robotobold" />

                <com.view.MTextView
                    android:id="@+id/removePromoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:text=""
                    android:textColor="#f44040"
                    android:textSize="@dimen/txt_size_12"
                    app:customTypeFace="@string/robotobold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="gone">

                <com.view.MTextView
                    android:id="@+id/promocodeappliedVTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_size_14"
                    app:customTypeFace="@string/robotobold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/couponCodeArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#eeeeee"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="10dp"
                android:layout_weight="0"
                android:clickable="false"
                android:padding="5dp"
                android:tint="@color/appThemeColor_1"
                app:srcCompat="@drawable/ic_discount_ufx" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center_vertical|start"
                android:orientation="vertical"
                android:padding="5dp">

                <com.view.MTextView
                    android:id="@+id/applyCouponHTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|start"
                    android:maxLines="2"
                    android:text="Apply coupon"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/txt_size_16"
                    app:customTypeFace="@string/robotoRegular" />

                <com.view.MTextView
                    android:id="@+id/appliedPromoHTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:maxLines="1"
                    android:textAlignment="viewStart"
                    android:textColor="#333333"
                    android:textSize="@dimen/txt_size_12"
                    android:visibility="gone"
                    app:customTypeFace="@string/robotoRegular" />
            </LinearLayout>

            <ImageView

                android:id="@+id/couponCodeImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_arrow_right"
                android:tint="@color/appThemeColor_1" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/header"
        android:orientation="horizontal"
        android:padding="15dp">

        <include
            android:id="@+id/proceedToCheckOutBtn"
            layout="@layout/btn_type_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_btn_height"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bookingtimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bookingdateLayout"
        android:layout_gravity="center"

        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">


        <com.view.MTextView
            android:id="@+id/bookingtimeHname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="start|center"
            android:paddingStart="5dp"
            android:text="item"
            android:textAlignment="viewStart"
            android:textColor="#030303"
            android:textSize="@dimen/txt_size_16"
            app:customTypeFace="@string/robotobold" />

        <com.view.MTextView
            android:id="@+id/bookingtimeVname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center"
            android:paddingEnd="5dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="#4d4949"
            android:textSize="@dimen/txt_size_16"
            app:customTypeFace="@string/robotolightFont" />

    </LinearLayout>

</RelativeLayout>
