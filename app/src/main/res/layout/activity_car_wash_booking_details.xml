<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#F1F1F1"
    android:orientation="vertical">


    <include
        android:id="@+id/toolbar_include"
        layout="@layout/design_toolbar_general" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/containerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:elevation="@dimen/_2sdp">

                    <com.view.SelectableRoundedImageView

                        android:id="@+id/driverImg"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/roundrect" />
                </androidx.cardview.widget.CardView>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:textAlignment="viewStart"
                        android:id="@+id/seldriverNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Testing"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"
                        app:customTypeFace="@string/systemSemiBold" />

                    <com.view.simpleratingbar.SimpleRatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelFeatured"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/_5sdp"

                        android:padding="1dp"
                        app:SRB_fillColor="@color/ratingfill"
                        app:SRB_isIndicator="true"
                        app:SRB_numberOfStars="5"
                        app:SRB_starBackgroundColor="@color/gray_holo_light"
                        app:SRB_starSize="@dimen/_12ssp"
                        app:SRB_stepSize="0.5" />


                </LinearLayout>

            </LinearLayout>

            <ScrollView

                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:textAlignment="viewStart"
                        android:id="@+id/serviceHTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/systemSemiBold" />


                    <LinearLayout
                        android:id="@+id/itemContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#eae8e8"
                        android:orientation="vertical"
                        android:padding="@dimen/_15sdp"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.view.MTextView
                                android:id="@+id/subtotalHTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_16"
                                app:customTypeFace="@string/robotoRegular" />

                            <com.view.MTextView
                                android:id="@+id/subtotalVTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/appThemeColor_1"
                                android:textSize="@dimen/txt_size_16"
                                app:customTypeFace="@string/robotoRegular" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:elevation="2dp"
                            android:padding="5dp"
                            android:visibility="gone"
                            app:cardBackgroundColor="#efefef"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="8dp">

                                    <com.view.MTextView
                                        android:id="@+id/serviceTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotobold" />

                                    <com.view.MTextView
                                        android:id="@+id/driverNameTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textAlignment="viewEnd"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotoRegular" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="8dp">

                                    <com.view.MTextView
                                        android:id="@+id/bookDateHTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotobold" />

                                    <com.view.MTextView
                                        android:id="@+id/bookDateVTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textAlignment="viewEnd"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotoRegular" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="8dp">

                                    <com.view.MTextView
                                        android:id="@+id/booktimeHTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotobold" />

                                    <com.view.MTextView
                                        android:id="@+id/booktimeVTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textAlignment="viewEnd"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotoRegular" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        app:cardCornerRadius="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/couponCodeArea"
                                android:layout_width="match_parent"


                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center_vertical|start"

                                    android:layout_weight="0"

                                    android:tint="@color/appThemeColor_1"
                                    app:srcCompat="@drawable/ic_voucher" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|start"
                                    android:orientation="vertical">

                                    <com.view.MTextView
                                        android:id="@+id/applyCouponHTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical|start"
                                        android:maxLines="2"
                                        android:text="Apply coupon"
                                        android:textAlignment="viewStart"
                                        android:textAllCaps="true"
                                        android:textColor="#262626"
                                        android:textSize="@dimen/_11ssp"
                                        app:customTypeFace="@string/systemRegular" />

                                    <com.view.MTextView
                                        android:id="@+id/appliedPromoHTxtView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical|start"
                                        android:maxLines="1"
                                        android:text="Coupon applied"
                                        android:textAlignment="viewStart"
                                        android:textColor="#333333"
                                        android:textSize="@dimen/txt_size_12"
                                        android:visibility="gone"
                                        app:customTypeFace="@string/robotoRegular" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/couponCodeImgView"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:clickable="false"
                                    app:srcCompat="@drawable/ic_arrow" />

                                <ImageView
                                    android:id="@+id/couponCodeCloseImgView"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_clear" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/promocodeArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <com.view.MTextView
                                        android:id="@+id/promocodeappliedHTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="7dp"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/txt_size_14"
                                        app:customTypeFace="@string/robotobold" />

                                    <com.view.MTextView
                                        android:id="@+id/removePromoTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="3dp"
                                        android:text=""
                                        android:textColor="#f44040"
                                        android:textSize="@dimen/txt_size_12"
                                        app:customTypeFace="@string/robotobold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:visibility="gone">

                                    <com.view.MTextView
                                        android:id="@+id/promocodeappliedVTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="7dp"
                                        android:layout_weight="1"
                                        android:textAlignment="viewEnd"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/txt_size_14"
                                        app:customTypeFace="@string/robotobold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <com.view.MTextView
                        android:textAlignment="viewStart"
                        android:id="@+id/chargeHTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        app:customTypeFace="@string/systemSemiBold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:contentPaddingBottom="@dimen/_5sdp"

                        app:contentPaddingTop="@dimen/_5sdp">

                        <LinearLayout

                            android:id="@+id/itemChargeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/paymentArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/appThemeColor_1"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        android:visibility="gone">

                        <com.view.MTextView
                            android:id="@+id/paymentHTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:maxLines="2"
                            android:padding="5dp"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_16"
                            app:customTypeFace="@string/robotoRegular" />

                        <com.view.MTextView
                            android:id="@+id/changePaymentTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical|end"
                            android:maxLines="2"
                            android:padding="5dp"
                            android:text=""
                            android:textAlignment="viewEnd"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_16"
                            app:customTypeFace="@string/robotoRegular" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/payImgView"
                            android:layout_width="35dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_cash_new" />

                        <com.view.MTextView
                            android:id="@+id/payTypeTxt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:gravity="start|center"
                            android:text="Cash"
                            android:textAlignment="viewStart"
                            android:textColor="#2f2f2f"
                            android:textSize="@dimen/txt_size_14"
                            app:customTypeFace="roboto_light" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/addressArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"

                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/locationHTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:gravity="center_vertical|start"
                            android:singleLine="true"
                            android:text="Booking Location"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            app:customTypeFace="@string/systemSemiBold" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:elevation="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:contentPadding="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RadioGroup

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <RadioButton
                                        android:id="@+id/userLocRadioBtn"
                                        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_weight="1"
                                        android:buttonTint="@color/appThemeColor_1"
                                        android:checked="true"
                                        android:paddingStart="10dp"
                                        android:text="Cash"
                                        android:textAlignment="viewStart"

                                        android:textColor="#656565"
                                        android:textSize="@dimen/_15ssp" />


                                    <RadioButton
                                        android:id="@+id/providerLocRadioBtn"
                                        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_weight="1"
                                        android:buttonTint="@color/appThemeColor_1"
                                        android:paddingStart="10dp"
                                        android:text="Card"
                                        android:textAlignment="viewStart"

                                        android:textColor="#656565"
                                        android:textSize="@dimen/_15ssp" />
                                </RadioGroup>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </LinearLayout>


            </ScrollView>

            <LinearLayout
                android:id="@+id/locationArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_curve_card"
                android:backgroundTint="@color/gray"
                android:elevation="@dimen/_5sdp"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="0.5dp"
                    android:background="@drawable/top_curve_card"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"

                    >

                    <LinearLayout
                        android:id="@+id/EditAddressArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/selLocImage"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:tint="@color/appThemeColor_1"
                            app:srcCompat="@drawable/ic_loc_icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/selLocTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|start"
                                android:maxLines="2"
                                android:text="Delivery location"

                                android:textAlignment="viewStart"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10ssp"
                                app:customTypeFace="@string/systemLightFont" />


                            <com.view.MTextView
                                android:id="@+id/userAddressTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="1dp"
                                android:ellipsize="end"
                                android:gravity="center_vertical|start"
                                android:maxLines="2"

                                android:textAlignment="viewStart"
                                android:textColor="#010101"
                                android:textSize="@dimen/txt_size_12"
                                android:visibility="visible"
                                app:customTypeFace="@string/systemMediumFont" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/addChangeLocImgView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="0"
                            android:tint="@color/appThemeColor_1"
                            android:visibility="gone"
                            app:srcCompat="@mipmap/ic_edit" />

                        <com.view.MTextView
                            android:id="@+id/changeBtn"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="change"
                            android:textAllCaps="true"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_10ssp"
                            app:customTypeFace="@string/systemMediumFont" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/AddAddressArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_weight="0"
                                android:tint="@color/appThemeColor_1"
                                app:srcCompat="@drawable/ic_loc_icon" />

                            <com.view.MTextView
                                android:id="@+id/addAddressHTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center|start"
                                android:maxLines="2"
                                android:singleLine="true"
                                android:text="Add Service Location"

                                android:textAlignment="viewStart"
                                android:textAllCaps="true"
                                android:textColor="#212121"
                                android:textSize="@dimen/_13ssp"
                                app:customTypeFace="@string/systemMediumFont" />

                        </LinearLayout>

                        <com.view.MTextView
                            android:id="@+id/addAddressBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/location_border"
                            android:drawableTint="@color/appThemeColor_1"
                            android:ellipsize="end"
                            android:gravity="center|start"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:singleLine="true"
                            android:text="Add Service Location"

                            android:textAlignment="viewStart"
                            android:textAllCaps="true"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_11ssp"
                            app:customTypeFace="@string/systemMediumFont" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottombtnarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/btn_type2Area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <include
                        android:id="@+id/btn_type2_now"
                        layout="@layout/btn_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_btn_height"
                        android:layout_gravity="bottom" />
                </LinearLayout>

                <View
                    android:id="@+id/btnView"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/reschedulearea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible">

                    <include
                        android:id="@+id/btn_type_later"
                        layout="@layout/btn_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/all_btn_height"
                        android:layout_gravity="bottom" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <ProgressBar
            android:id="@+id/mProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>