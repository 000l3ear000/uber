<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
   android:layout_margin="@dimen/_5sdp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
   >


    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="@dimen/category_grid_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
       >


        <com.view.SelectableRoundedImageView
            android:id="@+id/catImgView"
            android:layout_width="@dimen/category_grid_size"
            android:layout_height="@dimen/category_grid_size"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_no_icon" />


        <com.view.MTextView
            android:id="@+id/uberXCatNameTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center|top"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="@dimen/_11ssp"
            app:autoSizeMaxTextSize="@dimen/_14ssp"
            app:autoSizeMinTextSize="@dimen/_8ssp"
            app:autoSizeStepGranularity="@dimen/_2ssp"
           android:padding="@dimen/_1sdp"
            app:customTypeFace="@string/systemMediumFont"
            app:autoSizeTextType="uniform" />


    </LinearLayout>
</LinearLayout>