<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/appThemeColor_1"
            android:gravity="center"
            android:orientation="vertical">


            <com.view.MTextView
                android:id="@+id/outStandingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/appThemeColor_TXT_1"
                android:textSize="@dimen/txt_size_20"
                app:customTypeFace="roboto_light" />

            <com.view.MTextView
                android:id="@+id/outStandingValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/appThemeColor_TXT_1"
                android:textSize="35dp"
                app:customTypeFace="roboto_light" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/cardArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone">

            <com.view.MTextView
                android:id="@+id/cardtitleTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="start|center_vertical"
                android:minHeight="30dp"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="@dimen/txt_size_16" />

            <ImageView
                android:id="@+id/cardimagearrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:layout_weight="0"
                android:clickable="false"

                android:src="@mipmap/ic_arrow_right"
                android:tint="#9f9f9f" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/below_shadow" />

        <LinearLayout
            android:id="@+id/adjustarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <com.view.MTextView
                android:id="@+id/adjustTitleTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="start|center_vertical"
                android:minHeight="30dp"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="@dimen/txt_size_16" />

            <ImageView
                android:id="@+id/adjustimagearrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:layout_weight="0"
                android:clickable="false"
                android:src="@mipmap/ic_arrow_right"
                android:tint="#9f9f9f" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/below_shadow" />


        <include
            android:id="@+id/btn_type2"
            layout="@layout/btn_type_1"
            android:layout_width="150dp"
            android:layout_height="@dimen/all_btn_height"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:paddingBottom="10dp" />


    </LinearLayout>

</LinearLayout>
