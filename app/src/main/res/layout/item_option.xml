<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rowArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/radioImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_radio_button_unchecked_black_24dp" />

        <RadioGroup
            android:id="@+id/optionRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <RadioButton
                android:id="@+id/optionradioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/MyCheckBox" />
        </RadioGroup>

        <com.view.MTextView
            android:textAlignment="viewStart"
            android:id="@+id/optionName"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:clickable="false"
            android:ellipsize="end"
            android:gravity="start|center"
            android:maxLines="2"
            android:text="Best Seller"
            android:textColor="@color/black" />

        <com.view.MTextView

            android:id="@+id/optionPrice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:clickable="false"
            android:text="500"
            android:textColor="@color/black" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_centerInParent="true"
        android:background="#efefef" />

</LinearLayout>



