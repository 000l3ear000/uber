<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.view.MTextView
            android:id="@+id/historyNoHTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:text="Booking#"
            android:textColor="#141414"
            android:textSize="@dimen/txt_size_18"
            app:customTypeFace="@string/robotomediumFont" />

        <com.view.MTextView
            android:id="@+id/historyNoVTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#141414"
            android:textSize="@dimen/txt_size_18"
            app:customTypeFace="@string/robotomediumFont" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">

                <com.view.MTextView
                    android:id="@+id/dateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_weight="0"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:textColor="#626262"
                    android:textSize="@dimen/txt_size_14" />

                <com.view.MTextView
                    android:id="@+id/etypeTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:maxLines="1"
                    android:text="25th may,2016"
                    android:textAlignment="viewEnd"
                    android:textColor="#626262"
                    android:textSize="@dimen/txt_size_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/slecttypearea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:visibility="gone">

                <com.view.MTextView
                    android:id="@+id/SelectedTypeNameTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="3dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#272727"
                    android:textSize="@dimen/txt_size_15" />

                <com.view.MTextView
                    android:id="@+id/packageTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="3dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#272727"
                    android:textSize="@dimen/txt_size_14"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/sourcearea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/srcimage"
                        android:orientation="vertical">


                        <com.view.MTextView
                            android:id="@+id/sourceAddressHTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:maxLines="1"
                            android:text="Source address"
                            android:textAlignment="viewStart"
                            android:textColor="#909090"
                            android:textSize="@dimen/txt_size_14" />

                        <com.view.MTextView
                            android:id="@+id/sourceAddressTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:minHeight="40dp"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="#272727"
                            android:textSize="@dimen/txt_size_15" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/destarea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sourcearea"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@id/imagedest"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/destAddressHTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:maxLines="1"
                            android:text="Dest address"
                            android:textAlignment="viewStart"
                            android:textColor="#909090"
                            android:textSize="@dimen/txt_size_14" />

                        <com.view.MTextView
                            android:id="@+id/destAddressTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:minHeight="40dp"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="#272727"
                            android:textSize="@dimen/txt_size_15" />
                    </LinearLayout>


                    <com.view.DividerView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/imagedest"
                        android:layout_below="@+id/srcimage"
                        android:layout_marginBottom="-6dp"
                        android:layout_marginTop="-6dp"
                        android:layerType="software"
                        app:dividerColor="#adadad"
                        app:dividerDashGap="3dp"
                        app:dividerDashLength="3dp"
                        app:dividerOrientation="vertical" />


                    <ImageView
                        android:id="@+id/srcimage"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:src="@drawable/hcircle"
                        android:tint="#6eb746" />

                    <ImageView
                        android:id="@+id/imagedest"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/sourcearea"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/hmarker"
                        android:tint="#d73030" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#E3E3E3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <com.view.MTextView
                    android:id="@+id/statusHTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/txt_size_16"
                    app:customTypeFace="@string/robotobold" />

                <com.view.MTextView
                    android:id="@+id/statusVTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/txt_size_16"
                    app:customTypeFace="roboto_light" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>