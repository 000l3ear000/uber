<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DestinationDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/Red"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="18dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="107dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_back_dialog" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        app:auto_cycle="true"
        app:corner_radius="20"
        app:delay="0"
        app:error_image="@color/sinch_purple"
        app:period="3000"
        app:placeholder="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/destName"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0.85"
            android:padding="20dp"
            android:text="Destination 1"
            android:textColor="@color/red"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ridePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:padding="15dp"
            android:text="$50"
            android:textColor="@color/green"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Pickup:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pickupLoc"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="Pickup Location: "
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|clip_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="111dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dropoff:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/destLoc"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="Drop Location:"
                android:textColor="@color/skyBlue"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="12dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#6AB53F"
            android:text="Book Trip" />
    </LinearLayout>

</LinearLayout>