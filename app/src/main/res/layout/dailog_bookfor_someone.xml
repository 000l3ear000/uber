<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/cancelBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:src="@drawable/track_status_order_cancel"
        android:tint="@color/black" />

    <com.view.MTextView
        android:id="@+id/titleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_18"
        app:customTypeFace="@string/robotobold" />

    <View
        android:id="@+id/leftSeperationLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#BABABA" />

    <LinearLayout
        android:id="@+id/myselfArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.view.MTextView
            android:textAlignment="viewStart"
            android:id="@+id/myselfTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_18"
            app:customTypeFace="@string/robotobold" />

        <RadioButton
            android:id="@+id/selfRadioBtn"
            android:layout_marginEnd="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/gray"
            android:paddingStart="10dp"
            android:text=""
            android:textAlignment="viewStart"
            android:visibility="visible" />

        <ImageView
            android:tint="@color/appThemeColor_1"
            android:id="@+id/selfSelectImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/ic_right"
            android:visibility="gone" />


    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#BABABA" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#BABABA" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.view.MTextView
            android:textAlignment="viewStart"
            android:id="@+id/someoneTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_18"
            app:customTypeFace="@string/robotobold" />

        <RadioButton
            android:layout_marginEnd="4dp"
            android:id="@+id/someoneradioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/gray"
            android:paddingStart="10dp"
            android:text=""
            android:textAlignment="viewStart" />

        <ImageView
            android:tint="@color/appThemeColor_1"
            android:id="@+id/someoneSelectImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/ic_right"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/someonearea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            android:id="@+id/passengerName"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1" />

        <include
            android:id="@+id/mobileNo"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1" />


    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#BABABA" />

    <com.view.MTextView
        android:id="@+id/noteTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_18"
        app:customTypeFace="@string/robotolightFont" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#BABABA" />

    <include
        android:id="@+id/btn_type2"
        layout="@layout/btn_type_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_btn_height"
        android:layout_gravity="bottom"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:paddingBottom="10dp" />

</LinearLayout>
