<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/deliverall_design_toolbar_general" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/mCardView"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/storeImg"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/roundrect" />
          </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="vertical">

                <com.view.MTextView
                    android:id="@+id/restaurantNameTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:includeFontPadding="false"

                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    app:customTypeFace="@string/systemSemiBold" />

                <com.view.MTextView
                    android:id="@+id/resAddressTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text=""

                    android:textAlignment="viewStart"
                    android:textColor="#646464"
                    android:textSize="@dimen/_10ssp"
                    app:customTypeFace="@string/systemLightFont" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/locationArea"
        android:layout_below="@+id/topArea">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/itemContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" />

           <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/couponCodeArea"
                        android:layout_width="match_parent"


                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center_vertical|start"

                            android:layout_weight="0"

                            android:tint="@color/appThemeColor_1"
                            app:srcCompat="@drawable/ic_voucher" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/applyCouponHTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical|start"
                                android:maxLines="2"
                                android:text="Apply coupon"
                                android:textAlignment="viewStart"
                                android:textAllCaps="true"
                                android:textColor="#262626"
                                android:textSize="@dimen/_11ssp"
                                app:customTypeFace="@string/systemRegular" />

                            <com.view.MTextView
                                android:id="@+id/appliedPromoHTxtView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|start"
                                android:maxLines="1"
                                android:text="Coupon applied"
                                android:textAlignment="viewStart"
                                android:textColor="#333333"
                                android:textSize="@dimen/txt_size_12"
                                android:visibility="gone"
                                app:customTypeFace="@string/robotoRegular" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/couponCodeImgView"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:clickable="false"
                            app:srcCompat="@drawable/ic_arrow" />

                        <ImageView
                            android:id="@+id/couponCodeCloseImgView"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_clear" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/promocodeArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.view.MTextView
                                android:id="@+id/promocodeappliedHTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="7dp"
                                android:textColor="#000000"
                                android:textSize="@dimen/txt_size_14"
                                app:customTypeFace="@string/robotobold" />

                            <com.view.MTextView
                                android:id="@+id/removePromoTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="3dp"
                                android:text=""
                                android:textColor="#f44040"
                                android:textSize="@dimen/txt_size_12"
                                app:customTypeFace="@string/robotobold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:visibility="gone">

                            <com.view.MTextView
                                android:id="@+id/promocodeappliedVTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7dp"
                                android:layout_weight="1"
                                android:textAlignment="viewEnd"
                                android:textColor="#000000"
                                android:textSize="@dimen/txt_size_14"
                                app:customTypeFace="@string/robotobold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
          </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.view.MTextView
                        android:id="@+id/subtotalHTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="@dimen/txt_size_16"
                        app:customTypeFace="@string/robotoRegular" />

                    <com.view.MTextView
                        android:id="@+id/subtotalVTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#333333"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/robotoRegular" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:contentPaddingBottom="@dimen/_5sdp"

                    app:contentPaddingTop="@dimen/_5sdp">

                    <LinearLayout
                        android:id="@+id/farecontainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
              </androidx.cardview.widget.CardView>


                <com.view.MTextView
                    android:id="@+id/noLoginNoteTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_size_12"
                    app:customTypeFace="@string/robotolightFont" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/delveryAddressArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp">


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@drawable/square_border_common">

                        <com.view.editBox.MaterialEditText
                            android:id="@+id/deliveryInstructionBox"
                            layout="@layout/editbox_form_design"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#757575"
                            android:textSize="@dimen/_13ssp"
                            app:customTypeFace="@string/systemLightFont" />

                    </RelativeLayout>


                    <com.view.MTextView
                        android:id="@+id/paymentModeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="viewStart"
                        android:textAllCaps="true"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_18"
                        android:visibility="gone"
                        app:customTypeFace="@string/robotoRegular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/checkboxWallet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:buttonTint="@color/appThemeColor_1"
                            android:text=" wallet"
                            android:theme="@style/SwitchButtonStyle" />

                        <com.view.MTextView
                            android:id="@+id/walletAmountTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|end"
                            android:text=""
                            android:textAlignment="viewEnd"
                            android:textAllCaps="true"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/txt_size_16"
                            app:customTypeFace="@string/robotobold" />
                    </LinearLayout>


                    <RadioGroup
                        android:id="@+id/paymentRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/cashRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/appThemeColor_1"
                            android:text="Cash Payment"
                            android:theme="@style/MyCheckBox" />


                        <com.view.MTextView

                            android:id="@+id/casenote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:gravity="start"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:text="COD is currently unavailable for you.You have 5.0Pending cancellation fee of Rs "
                            android:textColor="@color/gray"
                            android:textSize="@dimen/txt_size_14"
                            android:visibility="gone"
                            app:customTypeFace="@string/robotolightFont" />


                        <RadioButton
                            android:id="@+id/cardRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/appThemeColor_1"
                            android:text="Pay Online"
                            android:theme="@style/MyCheckBox" />


                        <LinearLayout
                            android:id="@+id/cardDetailsArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/txt_size_10"
                            android:background="@drawable/border_set"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="5dp">

                                    <com.view.MTextView
                                        android:id="@+id/cardTitleTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="start"
                                        android:text=""
                                        android:textColor="@color/Gray"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotomediumFont" />

                                    <com.view.MTextView
                                        android:id="@+id/cardDescTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="start"
                                        android:text=""
                                        android:textColor="@color/Gray"
                                        android:textSize="@dimen/txt_size_14"
                                        app:customTypeFace="@string/robotolightFont" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@mipmap/ic_menu_card"
                                    android:tint="@color/gray_holo_dark" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/useExistingCardLL"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:id="@+id/selectedCardDetails"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:visibility="visible">


                                        <com.view.MTextView
                                            android:id="@+id/existingCardTxt"
                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:layout_gravity="center"
                                            android:background="?attr/selectableItemBackground"
                                            android:gravity="start|center"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/txt_size_16"
                                            app:customTypeFace="@string/robotolightFont" />


                                        <com.view.MTextView
                                            android:id="@+id/cardNumTxt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="start|center"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/txt_size_14"
                                            android:visibility="gone"
                                            app:customTypeFace="@string/robotolightFont" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/manual_arrow_area"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/manual_arrow_right"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_gravity="center"
                                            android:src="@mipmap/ic_arrow_right"
                                            android:tint="@color/gray_holo_dark" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/editcard_area"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/iv_edit_card"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_gravity="center"
                                            app:srcCompat="@mipmap/ic_edit"
                                            android:tint="@color/gray_holo_dark" />
                                    </LinearLayout>

                                </LinearLayout>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/gray" />


                                <LinearLayout
                                    android:id="@+id/instantPaymentLL"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">


                                    <com.view.MTextView
                                        android:id="@+id/instantPaymentTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:layout_weight="1"
                                        android:background="?attr/selectableItemBackground"
                                        android:gravity="start|center"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotolightFont" />

                                    <ImageView
                                        android:id="@+id/instant_arrow_right"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:src="@mipmap/ic_arrow_right"
                                        android:tint="@color/gray_holo_dark" />


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/locationArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomArea"
        android:background="@drawable/top_curve_card"
        android:backgroundTint="@color/gray"
        android:elevation="@dimen/_5sdp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="0.5dp"
            android:background="@drawable/top_curve_card"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"

            >

            <LinearLayout
                android:id="@+id/EditAddressArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/selLocImage"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:tint="@color/appThemeColor_1"
                    app:srcCompat="@drawable/ic_loc_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/selLocTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="Delivery location"

                        android:textAlignment="viewStart"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        app:customTypeFace="@string/systemLightFont" />


                    <com.view.MTextView
                        android:id="@+id/addressTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical|start"
                        android:includeFontPadding="false"
                        android:maxLines="4"
                        android:textAlignment="viewStart"
                        android:textColor="#010101"
                        android:textSize="@dimen/txt_size_12"
                        android:visibility="visible"
                        app:customTypeFace="@string/systemMediumFont" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/addChangeLocImgView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:tint="@color/appThemeColor_1"
                    android:visibility="gone"
                    app:srcCompat="@mipmap/ic_edit" />

                <com.view.MTextView
                    android:id="@+id/changeAddresssTxt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:text="change"
                    android:textAllCaps="true"
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/_10ssp"
                    app:customTypeFace="@string/systemMediumFont" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/AddAddressArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="0"
                        android:tint="@color/appThemeColor_1"
                        app:srcCompat="@drawable/ic_loc_icon" />

                    <com.view.MTextView
                        android:id="@+id/addAddressHTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center|start"
                        android:maxLines="2"
                        android:singleLine="true"
                        android:text="Add Service Location"

                        android:textAlignment="viewStart"
                        android:textAllCaps="true"
                        android:textColor="#212121"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/systemMediumFont" />

                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/addAddressBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/location_border"
                    android:drawableTint="@color/appThemeColor_1"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="Add Service Location"

                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/_11ssp"
                    app:customTypeFace="@string/systemMediumFont" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomArea"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_type2area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <include
                android:id="@+id/btn_type2"
                layout="@layout/btn_type_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_gravity="bottom" />
        </LinearLayout>

        <LinearLayout


            android:id="@+id/maxItemarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background"
            android:elevation="15dp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:id="@+id/deliveryStatusView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#E3E3E3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/maxqty" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/maxitemTitleTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/mdtp_white"
                            android:gravity="start|center"
                            android:paddingStart="10dp"
                            android:textColor="@color/red"
                            android:textSize="@dimen/txt_size_16"
                            app:customTypeFace="@string/robotobold" />

                        <com.view.MTextView
                            android:id="@+id/maxitemmsgTxtView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/mdtp_white"
                            android:gravity="start|center"
                            android:paddingStart="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_size_14"
                            app:customTypeFace="@string/robotolightFont" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <include
                android:id="@+id/btn_clearcart"
                layout="@layout/btn_type_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp" />

        </LinearLayout>
    </LinearLayout>


    <com.view.ErrorView
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topArea"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:visibility="gone" />

</RelativeLayout>
