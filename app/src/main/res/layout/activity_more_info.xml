<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E8E7"
    android:orientation="vertical"
    tools:context=".MoreInfoActivity">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/design_toolbar_general" />

    <LinearLayout
        android:id="@+id/providerInfoArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_include"
        android:background="@color/appThemeColor_1"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"

            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/driverImgArea"
                android:layout_width="@dimen/_82sdp"
                android:layout_height="@dimen/_82sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center">

                <com.view.SelectableRoundedImageView
                    android:id="@+id/bottomViewdriverImgView"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    app:sriv_border_color="@color/white"
                    app:sriv_border_width="2dip"
                    app:sriv_left_bottom_corner_radius="20dip"
                    app:sriv_left_top_corner_radius="20dip"
                    app:sriv_oval="true"
                    app:sriv_right_bottom_corner_radius="20dip"
                    app:sriv_right_top_corner_radius="20dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"

                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_dot" />

                    <ImageView
                        android:id="@+id/driverStatus"
                        android:layout_width="@dimen/_15sdp"

                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerInParent="true"


                        android:tint="@color/appThemeColor_1"
                        app:srcCompat="@drawable/ic_dot" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="vertical">

                <com.view.MTextView
                    android:id="@+id/bottomViewnameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/seperationLine"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/appThemeColor_TXT_1"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:customTypeFace="@string/systemSemiBold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.view.simpleratingbar.SimpleRatingBar
                        android:id="@+id/bottomViewratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="-3dp"
                        android:padding="@dimen/_2sdp"
                        app:SRB_fillColor="@color/ratingfill"
                        app:SRB_isIndicator="true"
                        app:SRB_numberOfStars="5"
                        app:SRB_starBackgroundColor="@color/gray_holo_light"
                        app:SRB_starSize="@dimen/_15ssp"
                        app:SRB_stepSize="0.5" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.view.MTextView

                        android:id="@+id/bottomViewDescTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/view_profile_border"
                        android:backgroundTint="@color/appThemeColor_TXT_1"
                        android:gravity="start"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_TXT_1"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal" />

                    <com.view.MTextView
                        android:id="@+id/bottomViewpriceTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toEndOf="@id/seperationLine"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="$ 200"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_16"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/appThemeColor_1" />


    </LinearLayout>

    <!--<com.view.MaterialTabs-->
    <!--android:id="@+id/material_tabs"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/_40sdp"-->
    <!--android:layout_below="@+id/providerInfoArea"-->
    <!--android:layout_gravity="start"-->
    <!--android:layout_marginStart="@dimen/_15sdp"-->
    <!--android:layout_marginTop="-25dp"-->
    <!--android:layout_marginEnd="@dimen/_15sdp"-->
    <!--android:background="@drawable/roundrect"-->
    <!--android:focusable="true"-->
    <!--android:focusableInTouchMode="true"-->
    <!--app:mtIndicatorHeight="0dp"-->
    <!--app:mtPaddingMiddle="false"-->
    <!--app:mtSameWeightTabs="true"-->
    <!--app:mtTabChangeBG="true"-->
    <!--app:mtTabPaddingLeftRight="0dp"-->
    <!--app:tabBackground="@drawable/tab_selector"-->
    <!--app:tabIndicatorHeight="0dp" />-->


    <LinearLayout
        android:id="@+id/tablayoutArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/providerInfoArea"
        android:layout_marginTop="-25dp">

        <include layout="@layout/tablayout_design" />
    </LinearLayout>

    <!--app:mtTabSelectedBG="@drawable/roundrect"-->
    <!--app:mtTabUnSelectedBG="#dadada"-->
    <!--app:mtTextColorSelected="#FFFFFF"-->
    <!--app:mtTextColorUnSelected="#878787"-->

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomCartView"
        android:layout_below="@+id/tablayoutArea"
        android:layout_weight="1"
        tools:context=".MyBookingsActivity" />

    <RelativeLayout
        android:id="@+id/bottomCartView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/appThemeColor_1"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.view.MTextView
            android:id="@+id/itemNpricecartTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:gravity="center_vertical|start"
            android:maxLines="2"
            android:paddingEnd="@dimen/_10sdp"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="@dimen/_22ssp"
            app:customTypeFace="@string/systemSemiBold" />

        <com.view.MTextView
            android:id="@+id/viewCartTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"

            android:layout_marginStart="@dimen/_50sdp"
            android:clickable="false"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:customTypeFace="@string/systemMediumFont" />


        <com.view.CounterFab

            android:id="@+id/cartView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/_9ssp"
            android:tint="@color/white"
            android:visibility="visible"
            app:backgroundTint="@android:color/transparent"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabSize="mini"

            app:srcCompat="@drawable/ic_cart" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carouselContainerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c0000000" />

        <com.view.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            app:autoPlay="false"
            app:fillColor="#FFFFFF"
            app:strokeColor="#FFFFFF" />

        <com.view.MTextView
            android:id="@+id/closeCarouselTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:clickable="true"
            android:padding="@dimen/_8sdp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/txt_size_16"
            app:customTypeFace="@string/robotomediumFont" />
    </RelativeLayout>

</RelativeLayout>