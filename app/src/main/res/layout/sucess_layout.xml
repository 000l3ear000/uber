<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"

        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/appThemeColor_TXT_1"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_185sdp"
                android:layout_height="@dimen/_185sdp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_success_new" />


            <com.view.MTextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:maxLines="1"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="#141414"
                android:textSize="@dimen/_16ssp"
                app:customTypeFace="@string/systemMediumFont" />


            <com.view.MTextView
                android:id="@+id/msgTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="start|center"
                android:maxLines="1"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="#646464"
                android:textSize="@dimen/_15ssp"
                app:customTypeFace="@string/systemLightFont" />


            <com.view.MTextView
                android:id="@+id/priceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:maxLines="1"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/appThemeColor_1"
                android:textSize="@dimen/_27ssp"
                app:customTypeFace="@string/systemMediumFont" />


            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/sucess_border"
                    android:minWidth="@dimen/_150sdp">

                    <com.view.SelectableRoundedImageView
                        android:id="@+id/UserImgView"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_no_pic_user"
                        app:sriv_border_color="@color/gray"
                        app:sriv_left_bottom_corner_radius="10dip"
                        app:sriv_left_top_corner_radius="10dip"
                        app:sriv_oval="true"

                        app:sriv_right_bottom_corner_radius="10dip"
                        app:sriv_right_top_corner_radius="10dip" />


                    <com.view.MTextView
                        android:id="@+id/nametxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_45sdp"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        app:customTypeFace="@string/systemMediumFont" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">


                <com.view.MTextView
                    android:id="@+id/transDateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#646464"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/systemLightFont" />

                <com.view.MTextView
                    android:id="@+id/transDateValTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_5sdp"
                    android:text=" "
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/systemMediumFont" />
            </LinearLayout>

            <include
                android:id="@+id/btn_type2"
                layout="@layout/btn_type_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_10sdp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
