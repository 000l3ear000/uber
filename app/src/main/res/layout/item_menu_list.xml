<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tagArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:backgroundTint="#f59c15"
            android:orientation="vertical">

            <com.view.MTextView
                android:id="@+id/tagTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/foodrectangle"
                android:backgroundTint="#f59c15"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="Best Seller"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_10"
                android:visibility="visible"
                app:customTypeFace="@string/robotomediumFont"
                app:textAllCaps="true" />

        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginStart="40dp"
            android:rotation="180"
            android:tint="#f59c15"
            app:srcCompat="@drawable/triangle">

        </ImageView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tagArea"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:id="@+id/top_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagArea"
            android:gravity="top">

            <LinearLayout

                android:id="@+id/mLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingBottom="@dimen/_2sdp">

                <LinearLayout

                    android:id="@+id/expandTempImg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:orientation="vertical"
                    android:visibility="visible" />

                <!--  â†“ Temp expand view  -->

                <LinearLayout
                    android:id="@+id/expandDetailArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_5sdp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/presImageEx"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="5dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_medicine" />

                            <ImageView
                                android:id="@+id/vegImageEx"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/veg"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/nonVegImageEx"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/nonveg"
                                android:visibility="gone" />

                            <com.view.MTextView
                                android:id="@+id/titleEx"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:gravity="start|center"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_14"
                                app:customTypeFace="@string/robotomediumFont" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:orientation="vertical">

                            <com.view.MTextView
                                android:id="@+id/descEx"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:textColor="#a0a0a0"
                                android:textSize="@dimen/txt_size_12"
                                app:customTypeFace="@string/robotolightFont" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.view.MTextView
                                    android:id="@+id/priceEx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:textColor="@color/appThemeColor_1"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold"
                                    app:customTypeFace="@string/robotobold" />

                                <com.view.MTextView
                                    android:id="@+id/offerPriceEx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:textColor="@color/appThemeColor_1"
                                    android:textSize="@dimen/_12ssp"
                                    app:customTypeFace="@string/robotobold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end|bottom"
                                            android:minWidth="@dimen/_75sdp"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="end|bottom"
                                                android:background="@drawable/login_border"
                                                android:gravity="center"
                                                android:orientation="horizontal"
                                                android:paddingStart="@dimen/_10sdp"
                                                android:paddingTop="@dimen/_3sdp"
                                                android:paddingEnd="@dimen/_10sdp"
                                                android:paddingBottom="@dimen/_3sdp">

                                                <com.view.MTextView
                                                    android:id="@+id/addBtnEx"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:includeFontPadding="false"
                                                    android:text="Add"
                                                    android:textAlignment="center"
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/white"
                                                    app:customTypeFace="@string/robotomediumFont" />

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:tint="@color/white"
                                                    app:srcCompat="@drawable/ic_cart" />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <com.view.MTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="#ff0000"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="offer"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_size_14"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--  â†“ Default view  -->

                <LinearLayout
                    android:id="@+id/mainDetailArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/presImage"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_medicine" />

                            <ImageView
                                android:id="@+id/vegImage"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="5dp"
                                android:src="@drawable/veg"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/nonVegImage"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/nonveg"
                                android:visibility="gone" />


                            <com.view.MTextView
                                android:textAlignment="viewStart"
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:gravity="start|center"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_size_14"
                                app:customTypeFace="@string/robotomediumFont" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_5sdp">

                            <com.view.MTextView
                                android:textAlignment="viewStart"
                                android:id="@+id/desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:textColor="#a0a0a0"
                                android:textSize="@dimen/txt_size_12"
                                app:customTypeFace="@string/robotolightFont" />

                            <com.view.MTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="#ff0000"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text="offer"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_size_14"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/menuImg"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:visibility="invisible" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/expandImg"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|top"
                android:layout_margin="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_no_icon" />

            <LinearLayout
                android:id="@+id/addBtnArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mLinearLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center|end"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_5sdp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.view.MTextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_12"
                        android:textStyle="bold"
                        app:customTypeFace="@string/robotobold" />

                    <com.view.MTextView
                        android:id="@+id/offerPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/robotobold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_2sdp">

                    <com.view.MTextView
                        android:id="@+id/addBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Add"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        app:customTypeFace="@string/robotomediumFont" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_cart" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@color/disable_color"
        android:visibility="gone" />

</RelativeLayout>