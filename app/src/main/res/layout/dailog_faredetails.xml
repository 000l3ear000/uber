<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#605E60"
    android:gravity="bottom"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="#F1F1F1"
        android:layout_marginBottom="@dimen/_minus10sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagecar"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center" />

            <com.view.MTextView
                android:id="@+id/carTypeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:customTypeFace="@string/systemSemiBold" />

            <com.view.MTextView
                android:id="@+id/pkgMsgTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start"
                android:textColor="#5f5f5f"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                app:customTypeFace="@string/systemRegular" />

            <LinearLayout
                android:id="@+id/capacityArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal">

                <com.view.MTextView
                    android:id="@+id/capacityHTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:textAlignment="viewStart"
                    android:maxLines="1"
                    android:textColor="#646464"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/systemRegular" />

                <com.view.MTextView
                    android:id="@+id/capacityVTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/systemMediumFont" />

            </LinearLayout>

            <View
                android:id="@+id/leftSeperationLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="#BABABA" />

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:orientation="horizontal">

                <com.view.MTextView
                    android:id="@+id/fareHTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:textAlignment="viewStart"
                    android:maxLines="1"
                    android:textColor="#646464"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/systemRegular" />

                <com.view.MTextView
                    android:id="@+id/fareVTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/systemMediumFont" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <com.view.MTextView
                    android:id="@+id/mordetailsTxt"
                    android:maxWidth="@dimen/_210sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:text="More Details"
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/systemSemiBold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/morwArrow"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:tint="@color/appThemeColor_1"
                    app:srcCompat="@drawable/ic_down_arrow_header"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_minus10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.view.MTextView
                        android:id="@+id/farenoteTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_gravity="end|center"
                        android:gravity="end|center"
                        android:textAlignment="viewStart"
                        android:text="This fare is based on our estimation. This may vary during trip and final fare."
                        android:textColor="#646464"
                        android:textSize="@dimen/_11ssp"
                        app:customTypeFace="@string/systemRegular"
                        tools:ignore="RtlCompat" />

                    <LinearLayout
                        android:id="@+id/bottomview"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_border"
                        android:padding="@dimen/_2sdp"
                        android:layout_weight="0">

                        <include
                            android:id="@+id/btn_type2"
                            layout="@layout/btn_type_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/all_btn_height"
                            android:layout_gravity="bottom" />

                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
