<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rowArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/selView"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:rotation="45"
            android:src="@drawable/square_menu"
            android:tint="@color/appThemeColor_1"
            android:visibility="invisible" />

        <com.view.MTextView
            android:id="@+id/rowName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="start|center"
            android:text=" "
            android:textColor="@color/black"
            app:customTypeFace="@string/robotomediumFont" />

        <com.view.MTextView
            android:id="@+id/rowCnt"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0"
            android:clickable="false"
            android:text="500"
            android:textColor="@color/black"
            app:customTypeFace="@string/robotomediumFont" />

        <com.view.MTextView
            android:id="@+id/postxt"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0"
            android:clickable="false"
            android:text="500"
            android:textColor="@color/black"
            android:visibility="gone"
            app:customTypeFace="@string/robotomediumFont" />
    </LinearLayout>

    <View
        android:id="@+id/rowview"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="#c7c5c5"
        android:visibility="visible"></View>

</LinearLayout>
