<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/category_banner_left_right_margin"
        android:layout_marginEnd="@dimen/category_banner_left_right_margin"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_5sdp"
        app:contentPadding="@dimen/_minus8sdp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/bannerAreaContainerView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">


                <com.view.SelectableRoundedImageView
                    android:id="@+id/bannerImgView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:adjustViewBounds="true"
                    android:background="#adadad"
                    android:clickable="false"
                    android:contentDescription="@string/app_name"
                    android:focusable="false"
                    android:src="@mipmap/ic_no_icon"
                    app:sriv_left_bottom_corner_radius="@dimen/_5sdp"
                    app:sriv_left_top_corner_radius="@dimen/_5sdp"
                    app:sriv_right_bottom_corner_radius="@dimen/_5sdp"
                    app:sriv_right_top_corner_radius="@dimen/_5sdp"  />




            </RelativeLayout>


            <com.view.MTextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bannerImgView"
                android:layout_margin="@dimen/_5sdp"
                android:clickable="false"
                android:focusable="false"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"
                app:customTypeFace="@string/robotomediumFont" />

            <com.view.MTextView
                android:id="@+id/noteTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTxt"
                android:layout_margin="@dimen/_5sdp"
                android:clickable="false"
                android:focusable="false"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/gray_holo_dark"
                android:textSize="@dimen/txt_size_14" />

            <com.view.MTextView
                android:id="@+id/bookNowTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="#cc239707"
                android:maxLines="1"
                android:layout_gravity="end"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="Book Now"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/seperatorView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginStart="@dimen/category_banner_left_right_margin"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/category_banner_left_right_margin"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="#E4E4E4"
        android:visibility="gone" />


</LinearLayout>