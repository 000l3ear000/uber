        <LinearLayout
            android:layout_marginTop="@dimen/_10ssp"
            android:id="@+id/selectArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.view.MTextView
                android:id="@+id/chooseImgHTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="Choose Category"
                android:textAlignment="viewStart"
                android:textColor="#2F2F2F"
                android:textSize="@dimen/txt_size_16"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_95sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/cameraView"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="@dimen/_95sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.view.SelectableRoundedImageView
                        android:clickable="false"
                        android:id="@+id/cameraIconImgView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_photo_camera"

                        />

                    <com.view.MTextView
                        android:clickable="false"
                        android:id="@+id/cameraTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#2F2F2F"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="visible"
                        app:customTypeFace="@string/systemRegular" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_95sdp"

                android:layout_height="@dimen/_95sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/galleryView"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="@dimen/_95sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.view.SelectableRoundedImageView
                        android:clickable="false"
                        android:id="@+id/galleryIconImgView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_gallery" />

                    <com.view.MTextView
                        android:clickable="false"
                        android:id="@+id/galleryTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#2F2F2F"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="visible"
                        app:customTypeFace="@string/systemRegular" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout

            android:id="@+id/prescriptionArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cameraGallaryArea"
           >

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:padding="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >

                    <ImageView

                        android:id="@+id/prescriptionIconImgView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        android:tint="@color/appThemeColor_Dark_1"
                        app:srcCompat="@drawable/ic_medical_prescription"

                        />

                    <com.view.MTextView
                        android:id="@+id/prescriptionTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="5dp"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#2F2F2F"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/robotobold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <include
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:id="@+id/btn_type2"
            layout="@layout/btn_type_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_btn_height"
            android:layout_below="@+id/selectArea"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>