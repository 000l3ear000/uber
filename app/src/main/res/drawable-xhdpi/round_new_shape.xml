<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="#edeae5"/>
            <!--shadow Color-->
            <size
                android:width="15dp"
                android:height="15dp" />
        </shape>
    </item>

    <item
        android:left="1.5dp"
        android:right="1.5dp"
        android:top="1.5dp"
        android:bottom="1.5dp">
        <shape android:shape="oval" >
            <size
                android:width="15dp"
                android:height="15dp" />
            <solid android:color="@color/white"/>//Background Color
        </shape>
    </item>
</layer-list>